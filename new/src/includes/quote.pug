-
  var quote = [{
    'quote': 'Live as if you were to die tomorrow. Learn as if you were to live forever.',
    'author': 'Mahatma Gandhi'
  },{
    'quote': 'Education is the most powerful weapon which you can use to change the world.',
    'author': 'Nelson Mandela'
  },{
    'quote': 'Education is what remains after one has forgotten what one has learned in school.',
    'author': 'Albert Einstein'
  },{
    'quote': 'Education is the movement from darkness to light.',
    'author': 'Allan Bloom'
  }];

.quote.romana_client_area.romana_section_padding
  .container
    .row
      .col-sm-8.col-sm-offset-2.col-xs-12
        .romana_client_crsl
          each item, index in quote
            .romana_single_client_text_img.text-center
                .romana_client_img
                  img(src="img/vendor/quote.png", alt="")
                .romana_single_client_text
                  p !{item.quote}
                  .romana_client_title
                    p - !{item.author}
